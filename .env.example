# ========================
# КОНФИГУРАЦИЯ БАЗЫ ДАННЫХ# ========================
# НАСТРОЙКИ ОТЛАДКИ
# ========================
# Включить режим отладки (True/False)
DEBUG=True

# ========================
# НАСТРОЙКИ СЕРВЕРА
# ========================
# Хост, на котором будет работать приложение
HOST=0.0.0.0# ========================
# ОБЩИЕ НАСТРОЙКИ
# ========================
# Режим работы приложения (development, production, test)
ENV=development
# Порт, на котором будет работать приложение
APP_PORT=8000

# ========================
POSTGRES_USER=vera
POSTGRES_PASSWORD=verapass
POSTGRES_DB=veradb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===================
# НАСТРОЙКИ REDIS
# ===================
REDIS_URL=redis://redis:6379/0

# ===================
# НАСТРОЙКИ MINIO
# ===================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false

# ===================
# НАСТРОЙКИ JWT
# ===================
# Секретный ключ для подписи JWT токенов
SECRET_KEY=ваш-секретный-ключ-здесь
# Алгоритм шифрования
ALGORITHM=HS256
# Время жизни токена доступа (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ===================
# Режим отладки (True/False)
DEBUG=true
# Окружение (development/staging/production)
ENVIRONMENT=development

# ===================
# НАСТРОЙКИ CORS
# ===================
# Разрешенные домены (через запятую)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================
# НАСТРОЙКИ GRAFANA
# ===================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ===================
# НАСТРОЙКИ ЭЛЕКТРОННОЙ ПОЧТЫ (ОПЦИОНАЛЬНО)
# ===================
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=ваш-email@example.com
SMTP_PASSWORD=ваш-пароль-от-почты
EMAIL_FROM=noreply@vera.example.com

# ===================
# НАСТРОЙКИ RAG (OPENROUTER)
# ===================
QDRANT_URL=http://qdrant:6333
OPENROUTER_API_KEY="your-openrouter-api-key-here"
OPENROUTER_API_BASE_URL="https://openrouter.ai/api/v1"
EMBEDDING_MODEL_NAME="all-MiniLM-L6-v2" # Локальная модель для эмбеддингов
GENERATION_MODEL_NAME="openai/gpt-3.5-turbo" # Модель на OpenRouter для генерации
VERA_SITE_URL="http://localhost:8000" # URL вашего сайта для заголовка Referer в OpenRouter
VERA_PROJECT_TITLE="Vera Project" # Название проекта для заголовка X-Title в OpenRouter
